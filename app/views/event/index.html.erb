
<div class="jumbotron p-6">
<h1 class="display-4 text-white ">Bonjour, bienvenue sur EventBright</h1>
<p class="lead text-white">Pour ceux qui adorent sortir.</p>
</div>
<div class="d-flex flex-wrap justify-content-center my-3">
  <% if user_signed_in? %>
    <button class="btn btn-outline-warning btn-lg"><%= link_to 'Créer un événement', new_event_path %></button>
  <% else %>
    <button class="btn btn-outline-warning btn-lg"><%= link_to 'Créer un compte', new_user_registration_path %></button>
    <button class="btn btn-outline-warning btn-lg"><%= link_to 'Se connecter', new_user_session_path %></button>
  <% end %>
</div>


<div class="d-flex flex-wrap justify-content-center">
<%Event.all.each do |event|%>
  <div class="card border-info my-2 mx-3 border-radius rounded" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">Event numéro <%= Event.all.index(event) + 1 %></h5>
      <p class="card-text">"<%= event.title.capitalize %>"</p>
      <p class="card-text">Contributeur : <%= event.host.first_name %></p>
      <button class="btn btn-warning text-white btn-md"><%= link_to 'Retrouve-le', event_path(event.id)%></button>
    </div>
  </div>
<% end %>
</div>

