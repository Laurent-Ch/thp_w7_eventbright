<section class="mx-auto" style="width: 500px;">

<div class="row d-flex justify-content-around">

<!--Grid column-->
<div class="col-md-9 mb-md-0 mb-5">
<br>
<h2 class="h3-responsive font-weight-bold text-center my-4">Edite ton événement <%=@event.title%></h2>
            <%= form_tag url_for(action: 'update'), multipart: true, method: 'patch', class: 'contact-form', id: 'contact-form' do %>

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12">
                        <div class="md-form mb-0 form-group">
                          <%= label_tag :event_start_date, "Date de l'événement" %>
                          <%= text_field_tag :event_start_date , nil, class: 'form-control', type:"date", value: @event.start_date%>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0 form-group">
                          <%= label_tag :event_duration, "Durée" %>
                          <%= text_field_tag :event_duration , nil, class: 'form-control', value: @event.duration%>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0 form-group">
                          <%= label_tag :event_title, "Ton super titre" %>
                          <%= text_field_tag :event_title , nil, class: 'form-control', value: @event.title %>
                        </div>
                    </div>
                </div>

                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0 form-group">
                          <%= label_tag :event_description, "Description" %>
                          <%= text_field_tag :event_description , nil, class: 'form-control', value: @event.description%>
                        </div>
                    </div>
                </div>

                <!--Grid row-->
                  <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0 form-group">
                          <%= label_tag :event_price, "Prix de l'événement" %>
                          <%= text_field_tag :event_price , nil, class: 'form-control', value: @event.price%>
                        </div>
                    </div>
                </div>

                <!--Grid row-->
                  <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0 form-group">
                          <%= label_tag :event_location, "Où qu'il est?" %>
                          <%= text_field_tag :event_location, nil, class: 'form-control', value: @event.location%>
                        </div>
                    </div>
                </div>

                <!--Grid row-->
                  <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0 form-group">
                        <%if @event.event_pic.attached?%>
                        <%= label_tag :event_pic, "Image actuelle, à modifier ou ré-uploader" %>
                        <div class="avatar text-center my-2"><%= image_tag @event.event_pic, size: "200x200"%></div>
                        <% else %>
                        <%= label_tag :event_pic, "Tu n'as pas encore d'image" %>
                        <% end %>
                          <%= file_field_tag :event_pic, class: 'form-control'%>
                        </div>
                    </div>
                </div>

                <div class="text-center text-md-left">
                  <%= submit_tag "C'est parti !", class: 'btn btn-danger form-control' %>
                </div>

                <div class="status"></div>
                <br>
        <% end%>
</section>