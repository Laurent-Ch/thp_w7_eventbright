<div class="container py-5 h-100">

  <div class="row d-flex justify-content-center align-items-center">
    <div class="card" style="width: 18rem;">
      <div class="card-body text-center">
      <%if @user.avatar.attached?%>
      <div class="avatar"><%= image_tag @user.avatar, size: "200x200"%></div>
      <div class="card-text mt-3">
      <%= form_tag user_avatars_path(@user), multipart: true do %>
        <%= file_field_tag :avatar%>
        <%= submit_tag "mettre à jour" , class: 'btn btn-danger form-control mt-1'%>
      <% end %>
      </div>
      <%end%>
      <h3 class="card-title">Ton profil</h3>
        <p class="card-text"><%= @user.description %></p>
      </div>
      <ul class="list-group list-group-flush text-center">
        <li class="list-group-item"><%= @user.first_name %></li>
        <li class="list-group-item"><%= @user.last_name %></li></li>
        <li class="list-group-item"><%= @user.email %></li>
      </ul>
      <div class="card-body text-center">
        <h5 class="card-title text-center mt-2">Édition</h5>
        <button class="btn btn-warning text-white btn-md card-link"><%= link_to "mail/mot de passe", edit_user_registration_path %></button>
        <button class="btn btn-warning text-white btn-md card-link mt-2"><%= link_to "reste du profil", edit_user_path(current_user.id) %></button>
      </div>
    </div>
  </div>

  <h2 class="text-center">Tes événements</h2>
  <div class="row d-flex justify-content-center align-items-center mt-4">

    <div class="d-flex flex-wrap justify-content-center">
      <% @events.each do |event| %>
        <div class="card border-info my-2 mx-3 border-radius rounded" style="width: 18rem;">
          <div class="card-body text-center">
            <h5 class="card-title">titre : <%= event.title %></h5>
            <button class="btn btn-warning text-white btn-md"><%= link_to 'Retrouve-le', event_path(event.id)%></button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
